@model IEnumerable<Progetto.Models.PuntiDecurtatiPerTrasgressore>

<h1>Punti Decurtati per Trasgressore</h1>
<div class="container mt-4">
    <div class="row">
        @foreach (var punti in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">Trasgressore: @punti.Cognome @punti.Nome</h5>
                    </div>
                    <div class="card-body bg-light">
                        <p class="card-text">
                            ID Anagrafica: @punti.IdAnagrafica<br>
                            Cognome: @punti.Cognome<br>
                            Nome: @punti.Nome<br>
                            <b>Totale Punti Decurtati: @punti.TotalPuntiDecurtati</b>
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Ultima consultazione: @DateTime.Now.ToString("dd/MM/yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
