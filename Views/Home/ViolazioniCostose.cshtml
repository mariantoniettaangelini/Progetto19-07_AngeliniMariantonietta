@model IEnumerable<Progetto.Models.ViolazioniCostose>

<h1>Violazioni che superano i 400€</h1>
<div class="container mt-4">
    <div class="row">
        @foreach (var violazioniCostose in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">Trasgressore: @violazioniCostose.Cognome @violazioniCostose.Nome</h5>
                    </div>
                    <div class="card-body bg-light">
                        <p class="card-text">
                            ID Anagrafica: @violazioniCostose.IdVerbale<br>
                            Cognome: @violazioniCostose.Cognome<br>
                            Nome: @violazioniCostose.Nome<br>
                            Data della violazione: @violazioniCostose.DataViolazione<br />
                            <b>Importo da pagare: @violazioniCostose.Importo</b>
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Ultima consultazione: @DateTime.Now.ToString("dd/MM/yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
