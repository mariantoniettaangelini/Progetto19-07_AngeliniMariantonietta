@model IEnumerable<Progetto.Models.MultePerTrasgressore>

<h1>Multe per Trasgressore</h1>
<div class="container mt-4">
    <div class="row">
        @foreach (var trasgressore in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">Trasgressore: @trasgressore.Cognome @trasgressore.Nome</h5>
                    </div>
                    <div class="card-body bg-light">
                        <p class="card-text">
                            ID Anagrafica: @trasgressore.IdAnagrafica<br>
                            Cognome: @trasgressore.Cognome<br>
                            Nome: @trasgressore.Nome<br>
                            <b>Totale da pagare: €@trasgressore.TotalImporto.ToString("N2")</b>
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Ultima consultazione: @DateTime.Now.ToString("dd/MM/yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
