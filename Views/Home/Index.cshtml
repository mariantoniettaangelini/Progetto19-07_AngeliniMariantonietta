@model IEnumerable<Progetto.Models.Verbale>
@{
    ViewData["Title"] = "Index";
}

<h1>Verbali e Trasgressori</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Multe</h2>
            @foreach (var verbale in Model)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        ID Multa: @verbale.IdVerbale
                    </div>
                    <div class="card-body bg-light">
                        Data della Violazione: @verbale.DataViolazione.ToString()<br />
                        Indirizzo Violazione: @verbale.IndirizzoViolazione<br>
                        Nominativo Agente: @verbale.NominativoAgente<br>
                        Importo: €@verbale.Importo.ToString("N2")
                    </div>
                    <div class="card-footer">
                        Ultima modifica: @DateTime.Now.ToString("dd/MM/yyyy")
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h2>Trasgressori</h2>
            @foreach (var trasgressore in ViewBag.Trasgressori)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        ID Trasgressore: @trasgressore.Id
                    </div>
                    <div class="card-body bg-light">
                        Nome: @trasgressore.Nome<br />
                        Cognome: @trasgressore.Cognome<br />
                        Codice Fiscale: @trasgressore.CodFiscale<br />
                        Città: @trasgressore.Citta
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <a class="btn btn-primary" asp-action="Create">Aggiungi un Verbale</a>
        <a class="btn btn-primary" asp-action="CreateTrasgressore">Aggiungi un Trasgressore</a>
    </div>
</div>
